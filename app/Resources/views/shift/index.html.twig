{% extends 'base.html.twig' %}

{% block page_title %} Lista de Turnos {% endblock %}

{% block body %}

    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for shift in shifts %}
            <tr>
                <td><a href="{{ path('shift_show', { 'id': shift.id }) }}">{{ shift.date }}</a></td>
                <td>{{ shift.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('shift_show', { 'id': shift.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('shift_edit', { 'id': shift.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('shift_new') }}">Create a new shift</a>
        </li>
    </ul>
{% endblock %}
