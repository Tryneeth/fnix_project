{% extends 'base.html.twig' %}

{% block body %}
    <h1>Session</h1>

    <table>
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ session.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ session.description }}</td>
            </tr>
            <tr>
                <th>Alarm</th>
                <td>{% if session.alarm %}{{ session.alarm|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if session.date %}{{ session.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ session.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('session_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('session_edit', { 'id': session.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
