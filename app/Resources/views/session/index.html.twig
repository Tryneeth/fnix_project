{% extends 'base.html.twig' %}

{% block page_title %} Lista de Sesiones {% endblock %}

{% block body %}

    <table class="table table-responsive table-bordered table">
        <thead class="thead-default">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Alarm</th>
                <th>Date</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for session in sessions %}
            <tr>
                <td><a href="{{ path('session_show', { 'id': session.id }) }}">{{ session.name }}</a></td>
                <td>{{ session.description }}</td>
                <td>{% if session.alarm %}{{ session.alarm|date('Y-m-d') }}{% endif %}</td>
                <td>{% if session.date %}{{ session.date|date('Y-m-d') }}{% endif %}</td>
                <td>{{ session.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('session_show', { 'id': session.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('session_edit', { 'id': session.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('session_new') }}">Create a new session</a>
        </li>
    </ul>
{% endblock %}
