{% extends 'base.html.twig' %}

{% block page_title %}Cliente: {{ client.name }}{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header text-center">
                    <h3>{{ client.name }} {{ client.lastname }} ID: {{ client.id }}</h3>
                </div>
                <div class="card-body">
                    <p><i class="fa fa-map-marker mr-2"></i>{{ client.address }}</p>
                    <p><i class="fa fa-envelope-o mr-2"></i>{{ client.mail }}</p>
                    <p><i class="fa fa-phone mr-2"></i>{{ client.phone }}</p>
                    <p><i class="fa fa-suitcase mr-2"></i>{{ admin.role }}</p>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <a class="btn btn-secondary" href="{{ path('client_index') }}">Regresar a la lista</a>
                        <a class="btn btn-primary mx-2" href="{{ path('client_edit', { 'id': client.id }) }}">Editar</a>
                        {{ form_start(delete_form) }}
                        <input class="btn btn-danger" type="submit" value="Eliminar">
                        {{ form_end(delete_form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
