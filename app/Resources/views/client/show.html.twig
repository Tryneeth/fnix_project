{% extends 'base.html.twig' %}

{% block page_title %}Cliente: {{ client.name }}{% endblock %}

{% block body %}

    <table class="table table-responsive">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ client.name }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ client.lastname }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ client.address }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ client.phone }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ client.mail }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ client.photo }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
        </tbody>
    </table>

    <div class="row">
        <a class="btn btn-secondary" href="{{ path('client_index') }}">Back to the list</a>
        <a class="btn btn-primary mx-2" href="{{ path('client_edit', { 'id': client.id }) }}">Edit</a>
        {{ form_start(delete_form) }}
        <input class="btn btn-danger" type="submit" value="Delete">
        {{ form_end(delete_form) }}
    </div>

{% endblock %}
