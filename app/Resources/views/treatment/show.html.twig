{% extends 'base.html.twig' %}

{% block body %}
    <h1>Treatment</h1>

    <table>
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ treatment.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ treatment.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if treatment.date %}{{ treatment.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ treatment.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('treatment_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('treatment_edit', { 'id': treatment.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
