{% extends 'base.html.twig' %}

{% block page_title %}Usuario: {{ admin.username }}{% endblock %}

{% block body %}

    <table class="table table-responsive">
        <tbody>
        <tr>
            <th>Nombre</th>
            <td>{{ admin.name }}</td>
        </tr>
        <tr>
            <th>Apellidos</th>
            <td>{{ admin.lastname }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ admin.email }}</td>
        </tr>
        <tr>
            <th>Tel√©fono</th>
            <td>{{ admin.phone }}</td>
        </tr>
        <tr>
            <th>Foto</th>
            <td>{{ admin.photo }}</td>
        </tr>
        <tr>
            <th>Usuario</th>
            <td>{{ admin.username }}</td>
        </tr>
        <tr>
            <th>Rol</th>
            <td>{{ admin.role }}</td>
        </tr>
        </tbody>
    </table>

    <div class="row">
        <a class="btn btn-secondary" href="{{ path('admin_index') }}">Back to the list</a>
        <a class="btn btn-primary mx-2" href="{{ path('admin_edit', { 'id': admin.id }) }}">Edit</a>
        {{ form_start(delete_form) }}
        <input class="btn btn-danger" type="submit" value="Delete">
        {{ form_end(delete_form) }}
    </div>

{% endblock %}
