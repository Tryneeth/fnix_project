{% extends 'default/simplified.base.html.twig' %}

{% block body %}




    <div class="wrapper-page">

        <div class="text-center">
            <a href="/" class="logo-lg"><i class="mdi mdi-radar"></i> <span>Minton</span> </a>
        </div>

        <form class="form-horizontal m-t-20" action="{{ path('login') }}" method="post">

            <div class="form-group row">
                <div class="col-12">
                    {% if error %}
                        <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <div class="input-group">
                        <span class="input-group-addon"><i class="mdi mdi-account"></i></span>
                        <input class="form-control" type="text" required="" placeholder="Usuario" id="username" name="_username" value="{{ last_username }}">
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-12">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="mdi mdi-radar"></i></span>
                        <input class="form-control" type="password" required="" placeholder="Contrase&ntilde;a" id="password" name="_password">
                    </div>
                </div>
            </div>

            <div class="form-group text-right m-t-20">
                <div class="col-xs-12">
                    <button class="btn btn-primary btn-custom w-md waves-effect waves-light" type="submit">Entrar
                    </button>
                </div>
            </div>

        </form>
    </div>

{% endblock %}
